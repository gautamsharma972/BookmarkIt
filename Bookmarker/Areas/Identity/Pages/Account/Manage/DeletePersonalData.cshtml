@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

    <div class="col-sm-9 border-left">
        <h5 class="font-weight-bold text-uppercase">@ViewData["Title"]</h5>
                  <hr />
        <div class="alert bg-warning" role="alert">
            <p>
                <strong>Deleting this data will permanently remove your account and your Bookmarks and this cannot be recovered.</strong>
            </p>
        </div>

        <div>
            <form id="delete-user" method="post" class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-danger" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}