@model Bookmarker.Models.CategoryModels
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Edit - @Model.Name</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-controller="Categories" asp-action="Edit" data-ajax-begin="onBegin"
      data-ajax-failure="NotifyError" data-ajax-success="Notify"
      data-ajax="true" data-ajax-method="POST">
    <input type="hidden" asp-for="Id" />
    <div class="modal-body">
        <div class="form-group row">
            <div class="col-sm-12">
                <label>Edit Category's Name</label>
                <input asp-for="Name" required class="form-control" placeholder="e.g. Social Medias" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary closeBt" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form> 