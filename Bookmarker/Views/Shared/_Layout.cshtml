<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/favicon.ico">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@ViewData["Title"] - BookmarkIt</title>
    <meta name="description" content="@ViewData["Description"]" />
    <meta itemprop="description" content="@ViewData["Description"]" />
    <meta name="keywords" content="bookmark, bookmarklet, digital bookmark, digital bookmarklet, digital bookmarker, bookmarklt.com, 
          bookmarker, free boomarklet, free online bookmarker" />
    <meta name="thumbnail" content="~/assets/logo.jpg" />
    <meta name="image" content="~/assets/logo.jpg" />
   <meta itemprop="image" content="~/assets/logo.jpg" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
  
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Source+Sans+Pro:400,600,700" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link href="~/assets/css/main.css" rel="stylesheet" />
</head>
<body>

    <nav class="topnav navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Href("~/")"><strong>BookmarkIt</strong></a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarColor02" style="">
                <ul class="navbar-nav mr-auto d-flex align-items-center">

                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Bookmarks")">Bookmarks <span class="sr-only">(current)</span></a>
                        </li>
                    }


                </ul>
                <partial name="_LoginPartial" />

            </div>
        </div>
    </nav>


    @RenderBody()
    <div id="loader" class="loader" style="display:none;"></div>
    <div class="container mt-5">
        <footer class="bg-white border-top p-3 text-muted small">
            <div class="row align-items-center justify-content-between">
                <div>
                    <span class="navbar-brand mr-2"><strong>BookmarkIt</strong></span> Copyright &copy;
                    <script>document.write(new Date().getFullYear())</script>
                    . All rights reserved.
                </div>
                <div>
                    Made by <a target="_blank" class="text-secondary font-weight-bold" href="#">Shakyens</a>.
                    <a href="@Href("~/About")" class="text-muted">About</a>
                    &nbsp;|&nbsp;
                    <a href="@Href("~/Privacy")" class="text-muted">Privacy Policy</a>

                </div>
            </div>
        </footer>
    </div>

    <script src="~/assets/js/vendor/jquery.min.js" type="text/javascript"></script>
    <script src="~/assets/js/vendor/popper.min.js" type="text/javascript"></script>
    <script src="~/assets/js/vendor/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/js/functions.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("Scripts", required: false)
   
</body>
</html>