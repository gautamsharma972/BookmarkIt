@using Microsoft.AspNetCore.Identity
@using Bookmarker.Areas.Identity.Data

@inject SignInManager<BookmarkerUsers> SignInManager
@inject UserManager<BookmarkerUsers> UserManager
@inject Bookmarker.Helpers.ICurrentUser _loggedUser


<ul class="navbar-nav ml-auto d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">                  
                @UserManager.GetUserName(User)
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item highlight">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
        </li>

    }

</ul>