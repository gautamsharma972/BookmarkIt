@model Bookmarker.Models.BookmarksModels

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete - @Model.BookmarkName</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <form asp-controller="Bookmarks" asp-action="Delete" data-ajax-begin="onBegin"
          data-ajax-failure="NotifyError" data-ajax-success="Notify"
          data-ajax="true" data-ajax-method="POST">
        <input asp-for="Id" type="hidden" />
        <input value="@Model.SiteLink" class="site-link" type="hidden" />

        <div class="container mt-4">
            <p class="lead">Sure to delete this Bookmark?</p>
            <div class="form-group" id="detailBt" style="display:none;">
                <div class="card bg-lightblue">
                    <div class="row">
                        <div class="col-sm-2">
                            <div id="imgdiv"></div>
                        </div>
                        <div class="col-sm-10 float-left pt-1 pb-1">
                            <h5 id="title"></h5>
                            <p class="text-muted" id="desc"></p>
                            <p class="text-muted" id="url"></p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="submit" id="btnDelete" class="btn btn-danger" value="Delete" />
                </div>
            </div>
        </div>
    </form>
</div>